<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insulin Bolus Calculator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 20px;
        }
        table {
            border-collapse: collapse;
            margin-top: 20px;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 10px;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
        }
        td input {
            width: 80px;
            text-align: center;
        }
    </style>
</head>
<body>

    <h1>Insulin Bolus Calculator</h1>
<h3>This is a research tool only, do not use in medical contexts or to calculate and administer insulin. Use T1D_Math at your own risk, and do not use the information or code to make medical decisions.</h3>

    <!-- Form to input values -->
    <form id="bolusForm">
        <label for="insulinFactor">Insulin Factor:</label>
        <input type="number" id="insulinFactor" required step="0.1"><br>

        <label for="carbs">Number of Carbs:</label>
        <input type="number" id="carbs" required step="1"><br>

        <label for="pfus">Number of PFUs:</label>
        <input type="number" id="pfus" required step="1"><br>

        <button type="button" onclick="calculateBolus()">Calculate Bolus</button>
    </form>

    <hr>

    <!-- Display results -->
    <h2>Results</h2>
    <p id="totalInsulin">Total Insulin: N/A</p>
    <p id="extendedPercentage">Extended Bolus Percentage: N/A</p>
    <p id="lastInsulinFactorDate">Last Insulin Factor Used: N/A</p>

    <!-- Interactive Table -->
    <h2>Interactive Table</h2>
    <table id="factorTable">
        <tr>
            <th></th>
            <th>5:30-10:00</th>
            <th>10:00-12:00</th>
            <th>12:00-15:00</th>
            <th>15:00-17:30</th>
            <th>17:30-21:00</th>
            <th>21:00-24:00</th>
            <th>24:00-03:00</th>
        </tr>
        <tr>
            <th>Factors</th>
            <td><input type="number" id="factorWeek1"></td>
            <td><input type="number" id="factorWeek2"></td>
            <td><input type="number" id="factorWeek3"></td>
            <td><input type="number" id="factorWeek4"></td>
            <td><input type="number" id="factorWeek5"></td>
            <td><input type="number" id="factorWeek6"></td>
            <td><input type="number" id="factorWeek7"></td>
        </tr>
        <tr>
            <th>Week</th>
            <td><input type="number" id="weekWeek1"></td>
            <td><input type="number" id="weekWeek2"></td>
            <td><input type="number" id="weekWeek3"></td>
            <td><input type="number" id="weekWeek4"></td>
            <td><input type="number" id="weekWeek5"></td>
            <td><input type="number" id="weekWeek6"></td>
            <td><input type="number" id="weekWeek7"></td>
        </tr>
        <tr>
            <th>Weekend</th>
            <td><input type="number" id="weekendWeek1"></td>
            <td><input type="number" id="weekendWeek2"></td>
            <td><input type="number" id="weekendWeek3"></td>
            <td><input type="number" id="weekendWeek4"></td>
            <td><input type="number" id="weekendWeek5"></td>
            <td><input type="number" id="weekendWeek6"></td>
            <td><input type="number" id="weekendWeek7"></td>
        </tr>
    </table>

    <script>
        // Check for the presence of a cookie and populate the insulin factor input box
        window.onload = function () {
            checkForCookie();
            populateTableFromCookieOrCSV();
        };

        function calculateBolus() {
            // ... (previous calculateBolus code)

            // Save input information in a cookie
            saveInputToCookie(insulinFactor, carbs, pfus);
        }

        function saveInputToCookie(insulinFactor, carbs, pfus) {
            // ... (previous saveInputToCookie code)

            // Update the table values in the cookie
            updateTableValuesInCookie();
        }

        function checkForCookie() {
            // ... (previous checkForCookie code)
        }

        function populateTableFromCookieOrCSV() {
            // ... (previous populateTableFromCookieOrCSV code)

            // If there is no cookie or the cookie is absent, populate the table from the CSV file
            if (!cookieFound) {
                populateTableFromCSV();
            }
        }

        function updateTableValuesInCookie() {
            // ... (previous updateTableValuesInCookie code)
        }

        function populateTableFromCSV() {
            // Fetch data from the CSV file
            fetch('T1D_populate.csv')
                .then(response => response.text())
                .then(data => {
                    // Parse CSV data
                    var rows = data.split('\n');
                    var tableData = [];

                    for (var i = 0; i < rows.length; i++) {
                        var rowData = rows[i].split(',');
                        tableData.push(rowData.slice(1)); // Exclude the first element (header column)
                    }

                    // Populate the table with CSV data
                    for (var i = 0; i < tableData.length; i++) {
                        for (var j = 0; j < tableData[i].length; j++) {
                            var cellId = getCellId(i, j);
                            document.getElementById(cellId).value = tableData[i][j];
                        }
                    }
                })
                .catch(error => console.error('Error fetching CSV:', error));
        }

        function getCellId(row, col) {
            return "factorTable" + row + "_" + col;
        }
    </script>

</body>
</html>
